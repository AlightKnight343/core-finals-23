<script>
    async function buyNow(){
        const response = await fetch(`/addcart/gramophone`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        const data = await response.json();
        if (data.success) {
            window.location.href='/cart'
        } else {
            notyf.error(data.msg);
        }
    }
</script>